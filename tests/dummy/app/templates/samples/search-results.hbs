{{slds-global-header}}

<main>
  {{#slds-navigation-bar applicationName='Search Results' as |bar|}}
    {{#bar.item path='samples.demo'}}Demo{{/bar.item}}
    {{#bar.item path='samples.index'}}Samples{{/bar.item}}
  {{/slds-navigation-bar}}
</main>

<div class="slds-brand-band slds-brand-band_large">

  <div class="slds-grid">
    <div id="search-side-bar" class="slds-col slds-size_1-of-6 slds-theme_shade">
      {{#slds-navigation type='inverse' as |nav|}}
        {{#nav.section title="Reports" as |section|}}
          {{#section.action path='samples.search-results'}}Recent{{/section.action}}
          {{#section.action}}Created by Me{{/section.action}}
          {{#section.action}}Private Reports{{/section.action}}
          {{#section.action}}Public Reports{{/section.action}}
          {{#section.action}}All Reports{{/section.action}}
        {{/nav.section}}

        {{#nav.section title="Folders" as |section|}}
          {{#section.action}}Created by Me{{/section.action}}
          {{#section.action}}Shared with Me{{/section.action}}
          {{#section.action}}All Folders{{/section.action}}
        {{/nav.section}}
      {{/slds-navigation}}
    </div>
    <div class="slds-col slds-p-around_medium">
      <div class="slds-card">
        <div class="slds-page-header">
          <div class="slds-grid">
            <div class="slds-col slds-has-flexi-truncate">
              <div class="slds-media slds-no-space slds-grow">
                <div class="slds-media__figure">
                  <span class="slds-icon_container slds-icon-standard-opportunity" title="Description of icon when needed">
                    <svg class="slds-icon" aria-hidden="true">
                      <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#opportunity" xmlns:xlink="http://www.w3.org/1999/xlink" />
                    </svg>
                  </span>
                </div>
                <div class="slds-media__body">
                  <nav>
                    <ol class="slds-breadcrumb slds-line-height_reset">
                      <li class="slds-breadcrumb__item">
                        <span>Opportunities</span>
                      </li>
                    </ol>
                  </nav>
                  <h1 class="slds-page-header__title slds-p-right_x-small">
                    <button class="slds-button slds-button_reset slds-type-focus slds-truncate" aria-haspopup="true" title="">
                      <span class="slds-grid slds-has-flexi-truncate slds-grid_vertical-align-center">
                        <span class="slds-truncate" title="Recently Viewed">Recently Viewed</span>
                        <span class="slds-icon_container slds-icon-utility-down" title="Description of icon when needed">
                          <svg class="slds-icon slds-icon--x-small slds-m-left_xx-small" aria-hidden="true">
                            <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#down" xmlns:xlink="http://www.w3.org/1999/xlink" />
                          </svg>
                          <span class="slds-assistive-text">Description of icon when needed</span>
                        </span>
                      </span>
                    </button>
                  </h1>
                </div>
              </div>
            </div>
            <div class="slds-col slds-no-flex slds-grid slds-align-top slds-p-bottom_xx-small">
              <div class="slds-button-group" role="group">
                <button class="slds-button slds-button_neutral">New</button>
                <div class="slds-button_last">
                  <button class="slds-button slds-button_icon slds-button_icon-border-filled" aria-haspopup="true" title="More Actions">
                    <svg class="slds-button__icon" aria-hidden="true">
                      <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#down" xmlns:xlink="http://www.w3.org/1999/xlink" />
                    </svg>
                    <span class="slds-assistive-text">More Actions</span>
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="slds-grid">
            <div class="slds-col slds-align-middle">
              <p class="slds-text-body_small">10 items â€¢ Updated 13 minutes ago</p>
            </div>
            <div class="slds-col slds-no-flex slds-grid slds-align-bottom">
              <div class="slds-dropdown-trigger slds-dropdown-trigger_click slds-m-left_x-small">
                <button class="slds-button slds-button_icon slds-button_icon-more" aria-haspopup="true" title="List View Controls">
                  <svg class="slds-button__icon" aria-hidden="true">
                    <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#settings" xmlns:xlink="http://www.w3.org/1999/xlink" />
                  </svg>
                  <svg class="slds-button__icon slds-button__icon_x-small" aria-hidden="true">
                    <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#down" xmlns:xlink="http://www.w3.org/1999/xlink" />
                  </svg>
                  <span class="slds-assistive-text">List View Controls</span>
                </button>
              </div>
              <div class="slds-dropdown-trigger slds-dropdown-trigger_click slds-m-left_xx-small">
                <button class="slds-button slds-button_icon slds-button_icon-more" aria-haspopup="true" title="Change view">
                  <svg class="slds-button__icon" aria-hidden="true">
                    <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#table" xmlns:xlink="http://www.w3.org/1999/xlink" />
                  </svg>
                  <svg class="slds-button__icon slds-button__icon_x-small" aria-hidden="true">
                    <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#down" xmlns:xlink="http://www.w3.org/1999/xlink" />
                  </svg>
                  <span class="slds-assistive-text">Change view</span>
                </button>
              </div>
              <button class="slds-button slds-button_icon slds-m-left_xx-small slds-button_icon-border-filled" title="Edit List">
                <svg class="slds-button__icon" aria-hidden="true">
                  <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#edit" xmlns:xlink="http://www.w3.org/1999/xlink" />
                </svg>
                <span class="slds-assistive-text">Edit List</span>
              </button>
              <button class="slds-button slds-button_icon slds-m-left_xx-small slds-button_icon-border-filled" title="Refresh">
                <svg class="slds-button__icon" aria-hidden="true">
                  <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#refresh" xmlns:xlink="http://www.w3.org/1999/xlink" />
                </svg>
                <span class="slds-assistive-text">Refresh</span>
              </button>
              <div class="slds-button-group" role="group">
                <button class="slds-button slds-button_icon slds-button_icon-border-filled" title="Charts">
                  <svg class="slds-button__icon" aria-hidden="true">
                    <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#chart" xmlns:xlink="http://www.w3.org/1999/xlink" />
                  </svg>
                  <span class="slds-assistive-text">Charts</span>
                </button>
                <button class="slds-button slds-button_icon slds-button_icon-border-filled" title="Filters">
                  <svg class="slds-button__icon" aria-hidden="true">
                    <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#filterList" xmlns:xlink="http://www.w3.org/1999/xlink" />
                  </svg>
                  <span class="slds-assistive-text">Filters</span>
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="slds-card-body">
          {{slds-data-table bordered=true cellBuffer=true}}
        </div>
      </div>


    </div>
  </div>

</div>