{{#slds-box}}
  <div class="slds-text-heading--large">Basic Inputs</div>

  {{#slds-control label='Required Field' isRequired=true as |control|}}
    {{control.input placeholder='placeholder text'}}
  {{/slds-control}}

  {{#slds-control label='Error Field' isRequired=true isError=true errorMessage='you forgot to select the doodat' as |control|}}
    {{control.input placeholder='placeholder text'}}
  {{/slds-control}}

  {{#slds-control label='Disabled Field' as |control|}}
    {{control.input placeholder='placeholder text' isDisabled=true}}
  {{/slds-control}}

  {{#slds-control label='Disabled Field' as |control|}}
    {{#control.input placeholder='placeholder text' as |input|}}
      {{input.icon}}
      {{input.input}}
      {{input.button}}
    {{/control.input}}
  {{/slds-control}}

  {{#slds-control label='Text Area' as |control|}}
    {{control.textarea placeholder='placeholder text'}}
  {{/slds-control}}

  {{#slds-control-group label='choose your fate' as |control|}}
    {{control.radio}}
    {{control.radio}}
  {{/slds-control-group}}
  
  {{#slds-control-group label='choose your fate' as |control|}}
    {{control.checkbox}}
    {{control.checkbox}}
  {{/slds-control-group}}

{{/slds-box}}